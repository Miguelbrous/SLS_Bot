{
  "title": "SLS Arena",
  "uid": "sls-arena",
  "schemaVersion": 38,
  "version": 1,
  "timezone": "browser",
  "editable": true,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Meta actual (EUR)",
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 0 },
      "targets": [
        { "expr": "sls_arena_current_goal_eur", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyEUR",
          "displayName": "Meta"
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Victorias",
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 0 },
      "targets": [
        { "expr": "sls_arena_total_wins", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Ticks sin campeón",
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 0 },
      "targets": [
        { "expr": "sls_arena_ticks_since_win", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 20 }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Drawdown arena (%)",
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 0 },
      "targets": [
        { "expr": "sls_arena_goal_drawdown_pct", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 15 },
              { "color": "red", "value": 30 }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Latencia vs último tick",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 5 },
      "targets": [
        { "expr": "sls_arena_state_age_seconds", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 600 },
              { "color": "red", "value": 1200 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Drawdown arena",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 5 },
      "targets": [
        { "expr": "sls_arena_goal_drawdown_pct", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percentunit" }
      }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Drawdown bot",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 13 },
      "targets": [
        { "expr": "sls_bot_drawdown_pct", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percentunit" }
      }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Decisiones/min (Cerebro)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 13 },
      "targets": [
        { "expr": "sls_cerebro_decisions_per_min", "refId": "A" }
      ]
    }
  ],
  "templating": { "list": [] },
  "time": { "from": "now-6h", "to": "now" },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}
