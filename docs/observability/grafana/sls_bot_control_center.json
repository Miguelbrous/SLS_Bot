{
  "title": "SLS Bot Control Center 2V",
  "uid": "slsbot2v",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "1m",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "PnL diario",
      "id": 1,
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sls_bot_daily_pnl"
        },
        {
          "refId": "B",
          "expr": "sls_bot_cumulative_pnl",
          "legendFormat": "Pnl acumulado"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD"
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Drawdown",
      "id": 2,
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sls_bot_drawdown_pct"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 8 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Slippage (bps)",
      "id": 3,
      "gridPos": { "x": 0, "y": 8, "w": 8, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sls_bot_slippage_bps"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 10 },
              { "color": "red", "value": 15 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Arena – ticks sin campeón",
      "id": 4,
      "gridPos": { "x": 8, "y": 8, "w": 8, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sls_arena_ticks_since_win"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 15 },
              { "color": "red", "value": 30 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Arena – Sharpe promedio",
      "id": 5,
      "gridPos": { "x": 16, "y": 8, "w": 8, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sls_arena_avg_sharpe"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 0.2 },
              { "color": "green", "value": 0.4 }
            ]
          }
        },
        "overrides": []
      }
    }
  ]
}
