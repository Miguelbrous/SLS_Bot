{
  "title": "SLS Bot Control Center",
  "uid": "sls-bot-control-center",
  "schemaVersion": 38,
  "version": 1,
  "timezone": "",
  "refresh": "30s",
  "editable": true,
  "panels": [
    {
      "type": "stat",
      "id": 1,
      "title": "PnL 30d",
      "description": "PnL acumulado en la ventana configurada para metrics_business.py",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "sls_bot_business_pnl_total_eur{mode=~\"$mode\"}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyEUR",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 0
              }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "stat",
      "id": 2,
      "title": "Win Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "sls_bot_business_win_rate{mode=~\"$mode\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "orange",
                "value": 0.45
              },
              {
                "color": "green",
                "value": 0.6
              }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        }
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "id": 3,
      "title": "PnL diario",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "sls_bot_business_daily_pnl_eur{mode=~\"$mode\"}",
          "legendFormat": "{{day}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyEUR",
          "color": {
            "mode": "continuous"
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "id": 4,
      "title": "Alertas operativas",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "ALERTS{alertname=~\"SLSBot.*\", mode=~\"$mode\", alertstate=\"firing\"}",
          "legendFormat": "{{alertname}} ({{severity}})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 20
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "mode",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "query": "label_values(sls_bot_business_trades_total, mode)",
        "refresh": 2,
        "includeAll": false,
        "multi": false,
        "current": {
          "selected": false,
          "text": "real",
          "value": "real"
        }
      }
    ]
  },
  "time": {
    "from": "now-30d",
    "to": "now"
  }
}
