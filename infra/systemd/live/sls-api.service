[Unit]
Description=SLS Control API (FastAPI)
After=network.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/root/SLS_Bot/bot
EnvironmentFile=-/etc/sls_bot.env
Environment="PYTHONPATH=/root/SLS_Bot/bot"
ExecStart=/usr/bin/env bash -c 'exec /root/SLS_Bot/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port ${SLS_API_PORT:-8880}'
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
